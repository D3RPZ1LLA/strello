<%= render partial: "board_header", locals: { board: @board } %>


<%= button_to "Finished", board_finished_url(@board), method: "get",  class: "board-button" %>
<%= button_to "Current", board_url(@board), method: "get",  class: "board-button" %>

<article class="card-set">
  <ul>
    <%= render @board.cards.select { |card| card.start_date > Time.now } %>
  </ul>
</article>

<div>
  <%= link_to "Add Card", new_board_card_url(@board) %>
</div>